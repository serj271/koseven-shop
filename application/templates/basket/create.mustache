<div class="page-header">
	<h1>{{headline}}</h1>
</div>

{{# value}}	
    {{{name}}
    {{# photos}}
	<img src={{path_fullsize}} />
	{{path_fullsize}}
    {{/ photos}}
		{{# specifications}}
			<p>
				specification name <a href="{{link}}" > {{name}} </a>
			</p>
			<p>
				specification value {{value}}
			</p>
		{{/ specifications}}
		{{# reviews}}
		<p>
			reviews date {{date}}
		</p>
		<p>
			reviews name {{name}}
		</p>
		<p>
			reviews rating {{rating}}
		</p>
		<p>
			reviews summary  {{summary}}
		</p>
		<p>
			reviews body {{body}}
		</p>
		
		{{/ reviews}}
		{{# variations}}
			<p>
				price {{price}}
			</p>
			<p>
				quantity {{quantity}}
			</p>
		{{/ variations}}
		
{{/ value}}

{{{form}}}
