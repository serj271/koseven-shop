<div class="page-header">
	<h1>Please, log in</h1>
</div>

<form action="" accept-charset="{{charset}}" method="POST">

	<div class="clearfix">
		<label for="username">Username</label>
		<div class="input">
			<input type="text" id="username" name="username" value="{{#values}}{{username}}{{/values}}" />
		</div>
	</div>
	<div class="clearfix">
		<label for="password">Password</label>
		<div class="input">
			<input type="password" id="password" name="password" />
		</div>
	</div>
	<div class="clearfix">
		<label for="remember">Remember me</label>
		<div class="input">
			<ul class="inputs-list">
				<li>
					<input type="checkbox" id="remember" name="remember" value="1" {{#values}}{{#remember}}checked{{/remember}}{{/values}} />
				</li>
			</ul>
		</div>
	</div>
	<div class="actions">
		<input type="hidden" name="token" value="{{#values}}{{token}}{{/values}}" />
		<button class="btn large primary" value="login">Login &raquo;</button>
	</div>

</form>